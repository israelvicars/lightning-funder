#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Don't require master key for credentials
export RAILS_MASTER_KEY_REQUIRED=false

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  echo "Preparing database..."
  ./bin/rails db:prepare --trace || {
    echo "Database preparation failed. Attempting db:create and db:migrate separately..."
    ./bin/rails db:create --trace
    ./bin/rails db:migrate --trace
  }
  
  echo "Running migrations for all databases (primary, cache, queue, cable)..."
  ./bin/rails db:migrate:all --trace || echo "Some migrations may have already run"
fi

exec "${@}"
