<div class="container">
  <h1>Upload Grant Template</h1>
  
  <div class="upload-form">
    <h2>Upload Grant Template</h2>
    
    <%= form_with url: imports_path, method: :post, multipart: true do |form| %>
      <div class="form-group">
        <%= form.label :file, "Select Excel File (.xlsx, .xls)" %>
        <%= form.file_field :file, accept: ".xlsx,.xls", required: true, class: "form-control" %>
      </div>
      
      <div class="form-actions">
        <%= form.submit "Upload and Import", class: "btn btn-primary" %>
        <%= link_to "View All Grants", grants_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
  
  <div class="recent-imports">
    <h2>Recent Imports</h2>
    
    <% if @import_batches.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Filename</th>
            <th>Status</th>
            <th>Total Rows</th>
            <th>Successful</th>
            <th>Failed</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @import_batches.each do |batch| %>
            <tr>
              <td><%= batch.filename %></td>
              <td><span class="badge <%= status_class(batch.status) %>"><%= batch.status %></span></td>
              <td><%= batch.total_rows || '-' %></td>
              <td><%= batch.successful_rows %></td>
              <td><%= batch.failed_rows %></td>
              <td><%= batch.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td>
                <%= link_to "View", import_batch_path(batch), class: "btn btn-sm btn-info" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No imports yet. Upload your first grant template above.</p>
    <% end %>
  </div>
</div>

<style>
