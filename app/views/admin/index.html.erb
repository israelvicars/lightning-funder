<div class="admin-container">
  <h1>ðŸ”§ Admin Panel</h1>
  <p class="admin-subtitle">Demo Administration - No Authentication Required</p>
  
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-number"><%= @grant_count %></div>
      <div class="stat-label">Total Grants</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number"><%= @import_batch_count %></div>
      <div class="stat-label">Import Batches</div>
    </div>
  </div>
  
  <div class="admin-actions">
    <div class="action-card">
      <h2>Clear All Grants</h2>
      <p>Delete all grant records from the database. Import batches will remain.</p>
      
      <%= button_to "Delete All Grants", admin_destroy_grants_path, 
          method: :delete, 
          class: "btn btn-danger",
          data: { confirm: "Are you sure? This will permanently delete #{@grant_count} grants. This action cannot be undone!" } %>
    </div>
    
    <div class="action-card">
      <h2>Clear All Data</h2>
      <p>Delete all import batches and their associated grants. This will reset the entire database.</p>
      
      <%= button_to "Delete All Data", admin_destroy_batches_path, 
          method: :delete, 
          class: "btn btn-danger-full",
          data: { confirm: "âš ï¸ WARNING: This will delete #{@import_batch_count} batches and #{@grant_count} grants. Are you absolutely sure?" } %>
    </div>
  </div>
  
  <div class="admin-nav">
    <%= link_to "â† Back to Home", root_path, class: "btn btn-secondary" %>
    <%= link_to "View All Grants", grants_path, class: "btn btn-secondary" %>
  </div>
</div>

